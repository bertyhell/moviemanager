        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SearchWindow" Background="#FFF1EDED" Height="778" Width="804">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Search panel -->
        <my:SearchControl x:Name="_searchControl" ClickOnSearch="_searchControl_ClickOnSearch"/>
        <my:ActorOverview Grid.Row="1" x:Name="_actorOverview" VerticalAlignment="Top" />
        <!-- Result view -->
        
    </Grid>
</Window>
