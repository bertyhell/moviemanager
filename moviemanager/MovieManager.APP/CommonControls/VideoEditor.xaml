<Window xmlns:my="clr-namespace:MovieManager.APP.CommonControls"  x:Class="MovieManager.APP.CommonControls.VideoEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VideoEditor" Height="300" Width="300" Background="#FFF1EDED">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <my:RatingEditor Video="{Binding}" />
    </Grid>
</Window>
