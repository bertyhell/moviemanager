<UserControl x:Class="Tmc.WinUI.Application.Common.ProgressBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <ProgressBar Height="auto" HorizontalAlignment="Stretch" Name="progressbar" VerticalAlignment="Stretch" Width="auto" IsIndeterminate="{Binding IsIndeterminate}" Maximum="{Binding Maximum}" Value="{Binding Value}" />
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Name="messagebox" Text="{Binding Message}"/>
    </Grid>
</UserControl>
