<Window x:Class="MovieManager.APP.Panels.Search.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Search="clr-namespace:MovieManager.APP.Panels.Search"
        xmlns:search="clr-namespace:Tmc.WinUI.Application.Panels.Search"
        Title="SearchWindow" Background="#FFF1EDED" Height="778" Width="804">
    <Grid x:Name="_layoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search panel -->
        <search:SearchControl x:Name="_searchControl" ClickOnSearch="SearchControlClickOnSearch"/>
        <search:ActorOverview Grid.Row="1" x:Name="_actorOverview"/>
        <!-- Result view -->
        
    </Grid>
</Window>
