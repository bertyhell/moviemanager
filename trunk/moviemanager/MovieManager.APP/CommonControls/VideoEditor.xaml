<Window xmlns:my="clr-namespace:MovieManager.APP.CommonControls"  x:Class="MovieManager.APP.CommonControls.VideoEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:MovieManager.APP.Localization"
        Title="VideoEditor" Height="300" Width="300" Background="#FFF1EDED">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="100"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="0" Grid.Row="0" Content="{x:Static loc:Resource.Name}"/>
        <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding Path=Name,Mode=TwoWay}"/>
        
        <Label Grid.Row="2" Grid.Column="0" Content="{x:Static loc:Resource.Rating}"/>
        <my:RatingEditorControl Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left"  Rating="{Binding Path=Rating,Mode=TwoWay}"/>
    </Grid>
</Window>
