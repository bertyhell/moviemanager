<Window x:Class="MovieManager.APP.Panels.RegularExpressions.AddRegex"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddRegex" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        
        <TextBox x:Name="_txtRegex"/>
        
        <StackPanel Grid.Row="2" HorizontalAlignment="Right">
            <Button x:Name="_btnOK" Content="OK" IsDefault="True" Click="BtnOkClick" />
        </StackPanel>
        
    </Grid>
</Window>
